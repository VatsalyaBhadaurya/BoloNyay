<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"/>
        </androidx.appcompat.widget.Toolbar>

        <!-- Developer Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Vatsalya Bhadaurya"
                    android:textSize="20sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Computer Science Student at GBU"
                    android:textColor="@color/text_secondary"/>

                <!-- Social Links -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <ImageButton
                        android:id="@+id/linkedinButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_linkedin"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="16dp"/>

                    <ImageButton
                        android:id="@+id/githubButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_github"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="16dp"/>

                    <ImageButton
                        android:id="@+id/websiteButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_website"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Hackathon Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About the App"
                    android:textSize="24sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="This app was created for the Bhasha Bandhu Hackathon, a pioneering event presented by Bhashini in partnership with Microsoft. This collaboration brings together the technological excellence of Microsoft and Bhashini's mission to bridge India's linguistic digital divide."
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bha"
                    android:contentDescription="Bhashini Logo"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView> 