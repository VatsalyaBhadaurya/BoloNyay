<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Bhashini Logo -->
    <ImageView
        android:id="@+id/bhaLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/bha"
        android:contentDescription="Bhashini Logo"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/appTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="BoloNyay"
        android:textColor="@color/secondary_orange"
        android:textSize="36sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/appDescription"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bhaLogo" />

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Voice-Enabled Legal Aid\nIn Your Language"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

</androidx.constraintlayout.widget.ConstraintLayout> 